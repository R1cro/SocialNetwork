<li>
  <div class="avatar">
    <%= avatar_for user, 100 %>
  </div>
  <p> <%= link_to user.email, user %> </p>
  <h4> <%= user.user_profile.first_name %>
      <%= user.user_profile.second_name %></h4>
  <div class="user-delete">
    <% if logged_in? && current_user.admin? && !current_user?(user) %>
      [ <%= link_to user, method: :delete,
                                       data: { confirm: "Remove that user? Are you sure?" } do %>
        <i class="fa fa-lg fa-ban" aria-hidden="true"></i> Remove ]
      <% end %>
    <% end %>
  </div>
