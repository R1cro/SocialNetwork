<% provide(:title, "Edit user") %>
<h1>Update your profile</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <fieldset class="password-field">
          <legend> Change Password: </legend>
          <%= f.label :password %>
          <%= f.password_field  :password, class: 'form-control' %>

          <%= f.label :password_confirmation, "Confirm Password" %>
          <%= f.password_field :password_confirmation, class: 'form-control' %>
        </fieldset>

        <fieldset class="avatar-field">
          <legend> Avatar </legend>
          <%= gravatar_for @user %>
          <a href="http://gravatar.com/emails">change</a>
        </fieldset>

        <fieldset class="personal-field">
          <legend> Personal Information: </legend>
          <%= f.fields_for :user_profile do |up| %>
              <%= up.label :first_name %>
              <%= up.text_field :first_name, class: 'form-control' %>

              <%= up.label :second_name %>
              <%= up.text_field :second_name, class: 'form-control' %>

              <%= up.label :birthday %>
              <%= render 'shared/birthday_field', object: up %>

              <%= up.label :city %>
              <%= up.text_field :city, class: 'form-control' %>
          <% end %>
        </fieldset>

        <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>