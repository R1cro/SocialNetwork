<% provide(:title, 'All users') %>
<h1>All users</h1>
  <div class="users">
    <%= render @users.sort { |a,b| a.email.downcase <=> b.email.downcase } %>
  </div>
  <div id="scrolling">
    <div id="loading"><img src="/ajax-loader.gif" alt="Loading..."></div>
    <%= will_paginate  @users %>
  </div>
