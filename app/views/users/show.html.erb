<% provide(:title, @user.email) %>
<div class="row">
  <aside>
    <section>
      <%= gravatar_for @user %>
      <% if @user.first_name.nil? %>
        <h1>
          <%= @user.email %>
          <% if @user.admin? %>[ADMIN]<% end %>
        </h1>
      <% else %>
        <h1>
          <%= @user.email %>
          <% if @user.admin? %>[ADMIN]<% end %>
        </h1>
        <p>
          <%= @user.first_name %>
          <%= @user.second_name %>,
          <%= @user.age(@user.birthday) %>.
          <%= @user.city %>
        </p>
      <% end %>

    </section>
  </aside>
  <article>
  </article>
</div>
