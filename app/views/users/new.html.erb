<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div id="show_row" class="row">
  <div class="col-md-6 col-md-offset-3 sign-up-form">
    <%= form_for(@user) do |u| %>
        <%= render 'shared/error_messages', object: u.object %>

        <%= u.label :email %>
        <%= u.email_field :email, class: 'form-control', required: true %>

        <%= u.label :password %>
        <%= u.password_field :password, class: 'form-control', required: true %>

        <%= u.label :password_confirmation, "Confirmation" %>
        <%= u.password_field :password_confirmation, class: 'form-control', required: true %>

        <fieldset>
          <legend> Personal Information: </legend>
          <%= u.fields_for :user_profile_attributes do |up| %>
            <div class="row">
              <div class="form-group col-sm-6">
                <%= up.label :first_name %>
                <%= up.text_field :first_name, class: 'form-control', required: true %>
              </div>
              <div class="form-group col-sm-6">
                <%= up.label :second_name %>
                <%= up.text_field :second_name, class: 'form-control', required: true%>
              </div>
            </div>
            <%= up.label :birthday %>
            <%= render 'shared/birthday_field', object: up %>
          <% end %>
        </fieldset>

        <%= u.submit "Create my account", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>