<hr>
<ol class="microposts">
  <% if micropost.replies.any? %>
    <% micropost.replies.each do |reply| %>
      <li id="micropost-<%= reply.id %>">
        <%= link_to avatar_for(reply.user, 60), reply.user %>
        <h4 class="post-owner"><%= link_to reply.user.email , reply.user %></h4>
        <span class="content"><%= reply.content %></span>
        <span class="timestamp">
          Reply <%= time_ago_in_words(reply.created_at) %> ago.
        <span class="remove-post">
        <% if current_user?(reply.user) %>
          <%= link_to micropost_reply_path(reply.id), method: :delete,
                     data: { confirm: "Remove your reply?" },
                     class: 'post-delete-link' do %>
            <i class="fa fa-lg fa-trash"></i>
          <% end %>
        <% end %>
       </span>
      </span>
    </li>
    <% end %>
  <% else %>
    <div class="empty-zone">
      <hr>
      <h4>NO REPLIES</h4>
      <hr>
    </div>
  <% end %>
</ol>
<hr>
