<% provide(:title, 'Feed') %>
<% if logged_in? %>
  <div class="row">
    <section class="user-info-feed">
      <%= render 'shared/about_user' %>
      <%= button_to 'POST', current_user, :method => 'get', class: 'btn btn-primary to-user-profile' %>
    </section>
      <div class="col-md-10 col-md-offset-1">
        <%= render 'shared/feed' %>
      </div>
  </div>
<% else %>
    <div class="row">
      <div class="col-md-10 col-md-offset-1 feed-for-guest">
        <h4>Last users posts</h4>
        <%= render 'shared/feed' %>
      </div>
    </div>
  <div class="center jumbotron">
    <h1>Social Network by R1cro</h1>
    <h2>
      This is the home page for the <a href="https://github.com/R1cro/SocialNetwork/">my web-application.</a>
      If you already registered, please, <a href="/login">log in</a>.
      If you not, so, it is a time to sign up!
    </h2>
    <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
    <%= link_to "Log in", login_path, class: "btn btn-lg" %>
  </div>
<% end %>



