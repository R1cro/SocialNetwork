<div class="user-details">
  <%= avatar_for @user, 100 %>
  <h1>
    <%= @user.user_profile.first_name %>
    <%= @user.user_profile.second_name %>
  </h1>
  <p>
    <%= @user.email %>
  <br>
    <% if @user.user_profile&.birthday %>
      <%= @user.user_profile.age(@user.user_profile.birthday) %> years old.
    <% end %>
    <%= @user&.user_profile&.city %>
  </p>
</div>