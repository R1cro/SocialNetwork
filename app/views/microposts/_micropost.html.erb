<li id="micropost-<%= micropost.id %>">
  <%= link_to avatar_for(micropost.user, 70), micropost.user %>
  <% if micropost.user.user_profile.first_name.nil? %>
    <h4><%= link_to micropost.user.email , micropost.user %></h4>
  <% else %>
    <h4><%= link_to micropost.user.user_profile.first_name + ' ' + micropost.user.user_profile.second_name , micropost.user %></h4>
  <% end %>
  <span class="content"><%= find_hashtag(micropost) %></span>
  <div class="post-image"><%= image_tag micropost.image.url if micropost.image? %></div>
  <span class="timestamp">
    Posted <%= time_ago_in_words(micropost.created_at) %> ago.
    <br>
    <% if micropost.tags.present? %>
      #<%= raw micropost.tags.map {|t| link_to t, tag_path(t) }.join(' #') %>
    <% end %>
   <span class="remove-post">
     <% if current_user?(micropost.user) %>
       <%= link_to micropost, method: :delete,
                              data: { confirm: "Remove your post?" },
                              class: 'post-delete-link' do %>
         <i class="fa fa-lg fa-trash"></i>
       <% end %>
     <% end %>
   </span>
  </span>
</li>